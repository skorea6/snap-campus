{{>layout/header}}
	<div class="section search-result-wrap">
		<div class="container">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="card-title text-center">일반 회원가입</h1>
                            <form action="/member/signup/verification/email/send" method="POST">

                                <div class="mb-3">
                                    <div class="row">
                                        <div class="col-12">
                                            <label for="inputEmail" class="form-label">이메일</label>
                                        </div>
                                    </div>
                                    <div class="row align-items-center">
                                        <div class="col-12">
                                            <input type="email" class="form-control" id="email" name="email" value="{{#data.email}}{{data.email}}{{/data.email}}">
                                        </div>
                                        <div class="form-text text-danger">{{errorMessage}}</div>
                                        <div class="form-text text-info">{{message}}</div>
                                        <div class="col-12">
                                            <button type="submit" class="btn btn-primary w-100">이메일로 1초 가입하기</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <div class="text-end mt-4">
                                <a href="/member/login">로그인</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
		</div>
	</div>
<script>
    $(document).ready(function() {
        $('title').text('회원가입 - 스냅캠퍼스');
    });
</script>
{{>layout/footer}}
