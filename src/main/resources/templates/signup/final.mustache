{{>layout/header}}
	<div class="section search-result-wrap">
		<div class="container">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="card-title text-center">회원가입</h1>
                            <form action="/member/signup">
                                <div class="mb-3">
                                    <label for="inputEmail" class="form-label">아이디</label>
                                    <input type="text" class="form-control" id="username">
                                    <div id="emailHelp" class="form-text text-danger">에러 메시지 테스트.</div>
                                </div>

                                <div class="mb-3">
                                    <label for="inputEmail" class="form-label">닉네임</label>
                                    <input type="text" class="form-control" id="email" aria-describedby="emailHelp">
                                    <div id="emailHelp" class="form-text text-danger">에러 메시지 테스트.</div>
                                </div>

                                <div class="mb-3">
                                    <label for="inputPassword" class="form-label">비밀번호</label>
                                    <input type="password" class="form-control" id="password">
                                </div>

                                <div class="mb-3">
                                    <label for="inputEmail" class="form-label">이름</label>
                                    <input type="text" class="form-control" id="name">
                                    <div id="emailHelp" class="form-text text-danger">에러 메시지 테스트.</div>
                                </div>

                                <div class="mb-3">
                                    <label for="inputEmail" class="form-label">학과</label>
                                    <input type="text" class="form-control" id="department">
                                    <div id="emailHelp" class="form-text text-danger">에러 메시지 테스트.</div>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">회원가입</button>
                            </form>
                            <div class="text-end mt-4">
                                <a href="/login">로그인</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
		</div>
	</div>
{{>layout/footer}}
