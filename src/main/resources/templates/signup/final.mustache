{{>layout/header}}
	<div class="section search-result-wrap">
		<div class="container">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="card-title text-center">회원가입 마무리</h1>
                            <form action="/member/signup/final" method="POST">
                                <div class="mb-3">
                                    <label class="form-label">아이디</label>
                                    <input type="text" class="form-control" name="userId" value="{{#data.userId}}{{data.userId}}{{/data.userId}}">
                                    {{#errors.userId}}
                                        <div class="form-text text-danger">{{.}}</div>
                                    {{/errors.userId}}
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">이메일</label>
                                    <input type="email" class="form-control" name="email" value="{{email}}" readonly>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">닉네임</label>
                                    <input type="text" class="form-control" name="nick" value="{{#data.nick}}{{data.nick}}{{/data.nick}}">
                                    {{#errors.nick}}
                                        <div class="form-text text-danger">{{.}}</div>
                                    {{/errors.nick}}
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">이름 (성함)</label>
                                    <input type="text" class="form-control" name="name" value="{{#data.name}}{{data.name}}{{/data.name}}">
                                    {{#errors.name}}
                                        <div class="form-text text-danger">{{.}}</div>
                                    {{/errors.name}}
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">비밀번호</label>
                                    <input type="password" class="form-control" name="password" value="{{#data.password}}{{data.password}}{{/data.password}}">
                                    {{#errors.password}}
                                        <div class="form-text text-danger">{{.}}</div>
                                    {{/errors.password}}
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">비밀번호 재입력</label>
                                    <input type="password" class="form-control" name="passwordRe" value="{{#data.passwordRe}}{{data.passwordRe}}{{/data.passwordRe}}">
                                    {{#errors.passwordRe}}
                                        <div class="form-text text-danger">{{.}}</div>
                                    {{/errors.passwordRe}}
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">대학교 학과명</label>
                                    <input type="text" class="form-control" name="department" value="{{#data.department}}{{data.department}}{{/data.department}}">
                                    {{#errors.department}}
                                        <div class="form-text text-danger">{{.}}</div>
                                    {{/errors.department}}
                                </div>

                                <div class="form-text text-danger">{{errorMessage}}</div>
                                <div class="form-text text-info">{{message}}</div>

                                <button type="submit" class="btn btn-primary w-100">회원가입</button>
                            </form>
                            <div class="text-end mt-4">
                                <a href="/login">로그인</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
		</div>
	</div>
{{>layout/footer}}
